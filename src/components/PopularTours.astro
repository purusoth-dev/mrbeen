---
const tours = [
	{
		destination: "Mahabalipuram",
		duration: "Full Day",
		price: "₹2,500",
		highlights: ["Shore Temple", "Pancha Rathas", "Beach visit"],
		image: "/images/mahabalipuram.jpg"
	},
	{
		destination: "Tirupati",
		duration: "1 Day",
		price: "₹4,500",
		highlights: ["Tirumala Temple", "Darshan", "Local sightseeing"],
		image: "/images/tirupati.jpg"
	},
	{
		destination: "Pondicherry",
		duration: "1-2 Days",
		price: "₹5,000",
		highlights: ["French Quarter", "Beaches", "Auroville"],
		image: "/images/pondichery.jpg"
	},
	{
		destination: "Yelagiri",
		duration: "2 Days",
		price: "₹7,500",
		highlights: ["Hill station", "Nature Park", "Adventure activities"],
		image: "/images/yelagiri.jpg"
	},
	{
		destination: "Kodaikanal",
		duration: "3 Days",
		price: "₹12,000",
		highlights: ["Hill retreat", "Lakes", "Waterfalls"],
		image: "/images/kodaikanal.jpg"
	},
	{
		destination: "Rameshwaram",
		duration: "2-3 Days",
		price: "₹15,000",
		highlights: ["Temple visit", "Pamban Bridge", "Beach"],
		image: "/images/rameshwaram.jpg"
	}
];
---

<section id="tours" class="py-20 bg-gray-50">
	<div class="container mx-auto px-4">
		<!-- Section Header -->
		<div class="text-center mb-16">
			<h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
				Popular <span class="text-yellow-500">Tours</span>
			</h2>
			<p class="text-xl text-gray-600 max-w-2xl mx-auto">
				Explore the best destinations from Chennai with our affordable tour packages
			</p>
		</div>

		<!-- Tours Grid -->
		<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
			{tours.map((tour) => (
				<div class="bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all hover:-translate-y-2 overflow-hidden border border-gray-200">
					<!-- Tour Image -->
					<div class="relative h-48 overflow-hidden bg-gray-200">
						<img 
							src={tour.image} 
							alt={tour.destination}
							loading="lazy"
							decoding="async"
							class="w-full h-full object-cover transition-transform hover:scale-105"
							style="background-color: #f3f4f6;"
						/>
						<div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent p-4">
							<h3 class="text-2xl font-bold text-white">{tour.destination}</h3>
						</div>
					</div>

					<!-- Tour Details -->
					<div class="p-6">
						<div class="flex justify-center items-center mb-4 text-sm text-gray-600">
							<span class="flex items-center">
								<svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
								</svg>
								{tour.duration}
							</span>
						</div>

						<div class="mb-4">
							<h4 class="font-semibold text-gray-900 mb-2">Highlights:</h4>
							<ul class="space-y-1">
								{tour.highlights.map((highlight) => (
									<li class="flex items-center text-gray-600 text-sm">
										<span class="text-yellow-500 mr-2">•</span>
										{highlight}
									</li>
								))}
							</ul>
						</div>

						<div class="border-t pt-4 flex items-center justify-between">
							<div>
								<p class="text-sm text-gray-600">Starting from</p>
								<p class="text-2xl font-bold text-yellow-500">{tour.price}</p>
							</div>
							<a
								href="#booking"
								class="px-6 py-2 bg-yellow-500 text-black font-semibold rounded-lg hover:bg-yellow-600 transition shadow-lg"
							>
								Book Now
							</a>
						</div>
					</div>
				</div>
			))}
		</div>

		<!-- Additional Info -->
		<div class="mt-12 bg-yellow-50 border-l-4 border-yellow-500 p-6 rounded-lg">
			<p class="text-gray-700">
				<strong>Note:</strong> Prices are indicative and may vary based on vehicle type, season, and additional requirements.
				Contact us for customized packages and group bookings.
			</p>
		</div>
	</div>
</section>
