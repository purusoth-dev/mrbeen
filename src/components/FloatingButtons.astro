---
const phone = "+91 9360615120";
const whatsappLink = "https://wa.me/919360615120";
---

<!-- Floating Action Buttons - Mobile optimized -->
<div class="fixed bottom-6 right-6 z-50 flex flex-col space-y-4">
	<!-- WhatsApp Button -->
	<a
		href={whatsappLink}
		target="_blank"
		rel="noopener noreferrer"
		class="floating-button bg-green-500 text-white w-14 h-14 rounded-full shadow-2xl hover:bg-green-600 transition-all flex items-center justify-center hover:scale-110 animate-bounce-slow"
		aria-label="Chat on WhatsApp"
		title="Chat on WhatsApp"
	>
		<span class="text-2xl">ðŸ’¬</span>
	</a>

	<!-- Call Button -->
	<a
		href={`tel:${phone}`}
		class="floating-button bg-yellow-500 text-gray-900 w-14 h-14 rounded-full shadow-2xl hover:bg-yellow-600 transition-all flex items-center justify-center hover:scale-110"
		aria-label="Call us"
		title="Call us now"
	>
		<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-7 h-7">
			<path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
		</svg>
	</a>

	<!-- Scroll to Top Button (appears when scrolling down) -->
	<button
		id="scroll-to-top"
		class="floating-button bg-gray-900 text-white w-14 h-14 rounded-full shadow-2xl hover:bg-gray-800 transition-all flex items-center justify-center hover:scale-110 opacity-0 invisible"
		aria-label="Scroll to top"
		title="Back to top"
	>
		<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-7 h-7">
			<path stroke-linecap="round" stroke-linejoin="round" d="M4.5 15.75l7.5-7.5 7.5 7.5" />
		</svg>
	</button>
</div>

<style>
	.floating-button {
		transition: all 0.3s ease;
	}

	.animate-bounce-slow {
		animation: bounce-slow 2s infinite;
	}

	@keyframes bounce-slow {
		0%, 100% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(-10px);
		}
	}

	#scroll-to-top.visible {
		opacity: 1 !important;
		visibility: visible !important;
	}
</style>

<script>
	// Scroll to top functionality
	const scrollButton = document.getElementById('scroll-to-top');

	// Show/hide scroll to top button
	window.addEventListener('scroll', () => {
		if (window.scrollY > 500) {
			scrollButton?.classList.add('visible');
		} else {
			scrollButton?.classList.remove('visible');
		}
	});

	// Scroll to top when clicked
	scrollButton?.addEventListener('click', () => {
		window.scrollTo({
			top: 0,
			behavior: 'smooth'
		});
	});
</script>
