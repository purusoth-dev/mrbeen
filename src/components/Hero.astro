					<h2 class="text-2xl font-bold text-gray-900">Book Your Ride</h2>
				</div>
				<form id="booking-form" class="space-y-4">
					<div>
						<label for="pickup" class="block text-sm font-medium text-gray-700 mb-2">
							Pickup Location
						</label>
						<input
							type="text"
							id="pickup"
							name="pickup"
							required
							placeholder="Enter pickup location"
							class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent text-gray-900"
						/>
					</div>

					<div>
						<label for="destination" class="block text-sm font-medium text-gray-700 mb-2">
							Destination
						</label>
						<input
							type="text"
							id="destination"
							name="destination"
							required
							placeholder="Where to?"
							class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent text-gray-900"
						/>
					</div>

					<div>
						<label for="trip-type" class="block text-sm font-medium text-gray-700 mb-2">
							Trip Type
						</label>
						<select
							id="trip-type"
							name="trip-type"
							required
							class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent text-gray-900"
						>
							<option value="">Select trip type</option>
							<option value="one-way">One-Way</option>
							<option value="round-trip">Round Trip</option>
							<option value="hourly">Hourly Rental</option>
						</select>
					</div>

					<div class="grid grid-cols-2 gap-4">
						<div>
							<label for="date" class="block text-sm font-medium text-gray-700 mb-2">
								Date
							</label>
							<input
								type="date"
								id="date"
								name="date"
								required
								class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent text-gray-900"
							/>
						</div>
						<div>
							<label for="time" class="block text-sm font-medium text-gray-700 mb-2">
								Time
							</label>
							<input
								type="time"
								id="time"
								name="time"
								required
								class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent text-gray-900"
							/>
						</div>
					</div>

					<div>
						<label for="car-type" class="block text-sm font-medium text-gray-700 mb-2">
							Car Type
						</label>
						<select
							id="car-type"
							name="car-type"
							required
							class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent text-gray-900"
						>
							<option value="">Select car type</option>
							<option value="sedan">Sedan (4 seater)</option>
							<option value="suv">SUV (6-7 seater)</option>
							<option value="tempo">Tempo Traveller (12+ seater)</option>
						</select>
					</div>

					<div>
						<label for="name" class="block text-sm font-medium text-gray-700 mb-2">
							Your Name
						</label>
						<input
							type="text"
							id="name"
							name="name"
							required
							placeholder="Enter your name"
							class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent text-gray-900"
						/>
					</div>

					<div>
						<label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
							Phone Number
						</label>
						<input
							type="tel"
							id="phone"
							name="phone"
							required
							placeholder="+91 xxxxx xxxxx"
							pattern="[0-9+\s-]+"
							class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent text-gray-900"
						/>
					</div>

					<button
						type="submit"
						class="w-full bg-yellow-500 text-gray-900 font-bold py-4 rounded-lg hover:bg-yellow-600 transition shadow-lg text-lg"
					>
						Get Quote Now
					</button>
				</form>
			</div>
		</div>
	</div>
</section>

<script>
	const form = document.getElementById('booking-form') as HTMLFormElement;

	form?.addEventListener('submit', (e) => {
		e.preventDefault();

		// Get form data
		const formData = new FormData(form);
		const data: Record<string, string> = {};
		formData.forEach((value, key) => {
			data[key] = value.toString();
		});

		// Create WhatsApp message
		const message = `Hi! I'd like to book a cab:%0A%0APickup: ${data.pickup}%0ADestination: ${data.destination}%0ATrip Type: ${data['trip-type']}%0ADate: ${data.date}%0ATime: ${data.time}%0ACar Type: ${data['car-type']}%0AName: ${data.name}%0APhone: ${data.phone}`;

		const whatsappUrl = `https://wa.me/919360615120?text=${message}`;

		// Option 1: Open WhatsApp (preferred)
		window.open(whatsappUrl, '_blank');

		// Option 2: Show alert
		// alert("Thanks! We'll contact you shortly.");

		// Reset form
		form.reset();
	});

	// Set minimum date to today
	const dateInput = document.getElementById('date') as HTMLInputElement;
	if (dateInput) {
		const today = new Date().toISOString().split('T')[0];
		dateInput.setAttribute('min', today);
		dateInput.value = today;
	}

	// Set default time to current time
	const timeInput = document.getElementById('time') as HTMLInputElement;
	if (timeInput) {
		const now = new Date();
		const hours = String(now.getHours()).padStart(2, '0');
		const minutes = String(now.getMinutes()).padStart(2, '0');
		timeInput.value = `${hours}:${minutes}`;
	}
</script>

<style>
	@keyframes float {
		0%, 100% {
			transform: translateY(0) rotate(0deg);
		}
		33% {
			transform: translateY(-20px) rotate(5deg);
		}
		66% {
			transform: translateY(10px) rotate(-5deg);
		}
	}

	@keyframes float-delay-1 {
		0%, 100% {
			transform: translateY(0) rotate(0deg);
		}
		33% {
			transform: translateY(15px) rotate(-3deg);
		}
		66% {
			transform: translateY(-15px) rotate(3deg);
		}
	}

	@keyframes float-delay-2 {
		0%, 100% {
			transform: translateY(0) rotate(0deg);
		}
		33% {
			transform: translateY(-25px) rotate(7deg);
		}
		66% {
			transform: translateY(5px) rotate(-7deg);
		}
	}

	.animate-float {
		animation: float 6s ease-in-out infinite;
	}

	.animate-float-delay-1 {
		animation: float-delay-1 8s ease-in-out infinite;
		animation-delay: 1s;
	}

	.animate-float-delay-2 {
		animation: float-delay-2 10s ease-in-out infinite;
		animation-delay: 2s;
	}
</style>
